<%- include('partials/_header.ejs', {title: 'Log in'}) %>
<div class="bg-opacity"></div>

<div class="container">
  <div class="card white">
    <div class="card-content white">
      <div class="card-title teal-text darken-4 center logo-heading"><div><h1><i class="fa-solid fa-file-pen"></i></h1></div><div><h1>Crochet Patterns</h1></div></div>
      <p>Write your own crochet patterns.</p>
      <p>Keep them safe, or share them with the world.</p>
    </div>



    <div class="card-content">
      <%- include('partials/_errors') %>
      <div class="card-content local-login">
        <form action="/auth/signup" method="POST">
            <div class="mb-3 name-container">
                <div>
                    <label for="firstName" class="form-label">First Name</label>
                    <input
                    type="text"
                    class="form-control"
                    id="firstName"
                    name="firstName"
                    minlength="2"
                    value="<%= typeof firstName != 'undefined' ? firstName : '' %>"
                    />
                </div>

                <div>
                    <label for="lastName" class="form-label">Last Name</label>
                    <input
                    type="text"
                    class="form-control"
                    id="lastName"
                    name="lastName"
                    minlength="2"
                    value="<%= typeof lastName != 'undefined' ? lastName : '' %>"
                    />
                </div>

            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                value="<%= typeof email != 'undefined' ? email : '' %>"
                />
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                minlength="8"
                value="<%= typeof password != 'undefined' ? password : '' %>"

                />
            </div>

            <div class="mb-3">
                <label for="password2" class="form-label">Retype password</label>
                <input
                type="password"
                class="form-control"
                id="password2"
                name="password2"
                minlength="8"
                value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                />
            </div>

            <div class="btn-container">
                <button type="submit" class="waves-effect waves-light btn">Sign up</button>
            </div>
        </form>
      </div>

    </div>


    <div class="divider"></div>
    <div class="card-action center">
      <a class="waves-effect waves-light btn" href="/"><i class="fa-regular fa-envelope"></i> &nbsp; Login with Email</a>
    </div>
      

    <div class="divider"></div>
    <div class="card-action center">
      <a class="waves-effect waves-light btn" href="/auth/google"><i class="fa-brands fa-google"></i> &nbsp; Login with Google</a>
    </div>

    <div class="divider"></div>
    <div class="card-content white">
      <div class="login-padding"></div>
    </div>
  </div>
</div>

<%- include('partials/_footer.ejs') %>
